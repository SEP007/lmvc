{
    "name": "scandio/lmvc",
    "type": "library",
    "description": "LMVC is an easy-to-use and extensible PHP (5.4) MVC framework",
    "keywords": ["php", "library", "mvc", "scandio"],
    "homepage": "https://github.com/scandio/lmvc",
    "license": "MIT",
    "authors": [
        {
            "name": "Scandio GmbH",
            "homepage": "http://www.scandio.de/"
        }
    ],
    "require": {
        "php": ">=5.4",
        "scandio/lmvc-utils": "dev-master",
        "scandio/lmvc-modules": "dev-master"
    },
    "repositories": [{
        "type": "git",
        "url": "https://github.com/SEP007/lmvc-utils.git"
    }, {
        "type": "git",
        "url": "https://github.com/SEP007/lmvc-modules.git"
    }],
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "Scandio\\lmvc": "lib/"
        }
    }
}
